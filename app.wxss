/**单行省略**/
.ellipsis {
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
}

/**多行省略**/
.line-ellipsis {
        overflow: hidden;
        text-overflow: ellipsis;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
}

/**透明黑色背景**/
.mask {
        position: fixed;
        top: 0;
        left: 0;
        z-index: 9;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.5);
}

/* 扩展点击区域 */
.extend-click {
        position: relative;
}

.extend-click ::before {
        content: '';
        position: absolute;
        top: -10px;
        left: -10px;
        right: -10px;
        bottom: -10px;
}